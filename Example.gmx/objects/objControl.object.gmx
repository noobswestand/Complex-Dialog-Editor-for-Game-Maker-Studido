var yy=10;
var xx=10;
if string_count("Top",chatTypeDescription[chatTypeOn])&gt;=1{
    yy=global.gui_height-50
}

draw_set_color(c_dkgray)
draw_set_alpha(0.9)
draw_rectangle(xx-3,yy,xx+450,yy+40,false)

draw_set_color(c_black)
draw_set_alpha(1)
draw_set_halign(fa_left)
draw_set_font(fnt_chat)
draw_text_shadow(xx,yy,"Press P to change the style of the dialog")
draw_text_shadow(xx,yy+20,"Current: "+chatTypeDescription[chatTypeOn])



if keyboard_check_released(ord("P")){
    chatTypeOn++
    if chatTypeOn&gt;=chatTypeMax{
        chatTypeOn=0
    }
    
    //Change the textbox style for the NPC's
    switch(chatTypeOn%3){
        case 0:
            global.chatX=5
            global.chatY=global.gui_height-400
            global.chatW=350+32
            global.chatH=150
        break;
        case 1:
            global.chatX=5
            global.chatY=global.gui_height-155
            global.chatW=global.gui_width-10
            global.chatH=150
        break;
        case 2:
            global.chatX=5
            global.chatY=5
            global.chatW=global.gui_width-10
            global.chatH=150
        break;
    }
    global.chatKeyboard=(chatTypeOn&gt;=3) &amp;&amp; (chatTypeOn&lt;=5)
    global.chatArrow=(chatTypeOn&gt;=6) &amp;&amp; (chatTypeOn&lt;=8)
}

